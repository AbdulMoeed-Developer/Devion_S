<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>DEVION | A Social Web App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
  <link rel="shortcut icon" type="image/png" href="https://cdn-icons-png.flaticon.com/128/174/174837.png">
  <style>
    body {
      background-image: url('./Pick An Interest.png');
      background-size: cover;
      background-attachment: fixed;
      color: white;
    }
    h1 {
      color: white; 
      font-weight: lighter; 
      font-size: 4rem;
    }
    .container {
      color: white;
    }
  </style>
</head>
<body>
  <%- include('../partials/navbar') %>
  <%- include('../partials/flash') %>
  
  <%- body %>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" crossorigin="anonymous"></script>

  <!-- Like button script -->
  <script>
    function increaseLikes() {
      let likeCount = document.getElementById('likeCount');
      if (!likeCount) return; // avoid errors if element missing
      let count = parseInt(likeCount.textContent) || 0;
      likeCount.textContent = count + 1;
    }
  </script>

  <!-- Bootstrap form validation script -->
  <script>
    (function () {
      'use strict';
      var forms = document.querySelectorAll('.needs-validation');
      Array.prototype.slice.call(forms)
        .forEach(function (form) {
          form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add('was-validated');
          }, false);
        });
    })();
  </script>
</body>
</html>
